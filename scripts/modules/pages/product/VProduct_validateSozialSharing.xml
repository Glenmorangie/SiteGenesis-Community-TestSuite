<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <tags>productactions,pdp,sendtofriend,socialbuttons</tags>
  <description>Validates social sharing buttons</description>
  <codecomment>Social Sharing</codecomment>
  <command name="assertElementPresent" target="css=.product-actions a.share-icon i.fa-facebook-square">
    <comment>Facebook</comment>
  </command>
  <command name="assertElementPresent" target="css=.product-actions a.share-icon i.fa-twitter-square">
    <comment>Facebook</comment>
  </command>
  <command name="assertElementPresent" target="css=.product-actions a.share-icon i.fa-google-plus-square">
    <comment>Facebook</comment>
  </command>
  <command name="assertElementPresent" target="css=.product-actions a.share-icon i.fa-pinterest-square">
    <comment>Pinterest</comment>
  </command>
  <command name="assertElementPresent" target="css=.product-actions a.share-icon i.fa-envelope-square">
    <comment>Email</comment>
  </command>
</scriptmodule>