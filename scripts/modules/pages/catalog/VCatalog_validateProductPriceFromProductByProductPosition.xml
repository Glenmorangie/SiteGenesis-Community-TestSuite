<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Validates the shown product price on the catalog page, you could chose the product by:
- first-of-type
- last-of-type or
- nth-of-type(X)</description>
  <parameter name="position" desc="position string e.g. first-of-type last-of-type"/>
  <parameter name="productPrice"/>
  <command name="assertText" target="css=#search-result-items  li@{position} .product-tile div.product-pricing span.product-sales-price" value="@{productPrice}"/>
</scriptmodule>