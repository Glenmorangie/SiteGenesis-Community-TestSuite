<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Stores the value of a size refinement at a specific position</description>
  <parameter name="position"/>
  <parameter name="size_varName"/>
  <command name="storeText" target="css=#secondary.refinements .refinement.size ul.size li:nth-of-type(@{position}) a" value="@{size_varName}"/>
</scriptmodule>