<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="7">
  <description>Validate price of shipping method.</description>
  <parameter name="position" desc="position"/>
  <parameter name="price" desc="price"/>
  <parameter name="site" desc="site"/>
  <codecomment>Validate shipping method price at selected positon</codecomment>
  <command name="assertText" target="css=#main #primary #shipping-method-list fieldset [for=&quot;${data_@{site}}@{position}&quot;] span" value="@{price}"/>
</scriptmodule>