<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <parameter name="messageNr"/>
  <parameter name="email"/>
  <parameter name="msgText"/>
  <command name="assertElementPresent" target="css=#@{messageNr}"/>
  <command name="assertText" target="css=#@{messageNr} td:nth-of-type(2)" value="@{email}"/>
  <command name="assertText" target="css=#@{messageNr} td:nth-of-type(3)" value="@{msgText}"/>
</scriptmodule>