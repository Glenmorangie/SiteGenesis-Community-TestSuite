<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="7">
  <description>Flow to set up site specific address data</description>
  <parameter name="country_varName"/>
  <parameter name="phone_varName"/>
  <parameter name="postalCode_varName"/>
  <module name="modules.helper.multilang.MHelper_setPostalCode_GB">
    <condition>('${site}' == 'GB')</condition>
    <parameter name="postalCode" value="@{postalCode_varName}"/>
  </module>
  <module name="modules.helper.multilang.MHelper_setPhone_GB">
    <condition>('${site}' == 'GB')</condition>
    <parameter name="phone" value="@{phone_varName}"/>
  </module>
  <module name="modules.helper.multilang.MHelper_setCounty_GB">
    <condition>('${site}' == 'GB')</condition>
    <parameter name="country" value="@{country_varName}"/>
  </module>
  <module name="modules.helper.multilang.MHelper_setCounty_US">
    <condition>('${site}' == 'US')</condition>
    <parameter name="country" value="@{country_varName}"/>
  </module>
  <module name="modules.helper.multilang.MHelper_setPhone_US">
    <condition>('${site}' == 'US')</condition>
    <parameter name="phone" value="@{phone_varName}"/>
  </module>
  <module name="modules.helper.multilang.MHelper_setPostalCode_US">
    <condition>('${site}' == 'US')</condition>
    <parameter name="postalCode" value="@{postalCode_varName}"/>
  </module>
</scriptmodule>