<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="7">
  <description>Set all number related constants for US</description>
  <parameter name="currency"/>
  <parameter name="decimalMark"/>
  <parameter name="digitGroupSeparators"/>
  <parameter name="priceRangeSeparators"/>
  <parameter name="price_pattern"/>
  <command name="store" target="${storefront_priceCurrency_US}" value="@{currency}"/>
  <command name="store" target="${storefront_decimalMark_US}" value="@{decimalMark}"/>
  <command name="store" target="${storefront_priceDigitGroupSeparators_US}" value="@{digitGroupSeparators}"/>
  <command name="store" target="- ${storefront_priceCurrency_US}" value="@{priceRangeSeparators}"/>
  <command name="store" target="\${storefront_priceCurrency_US}\d{1,3}([,]\d{3})*\.\d{2}" value="@{price_pattern}"/>
</scriptmodule>