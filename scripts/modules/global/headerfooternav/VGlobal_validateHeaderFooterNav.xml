<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Validate header, footer and navigation.</description>
  <codecomment>Validate header</codecomment>
  <command name="waitForElementPresent" target="css=h1.primary-logo a img"/>
  <command name="assertElementPresent" target="css=#mini-cart"/>
  <codecomment>Validate header banner</codecomment>
  <command name="assertElementPresent" target="css= .header-banner .header-promotion"/>
  <codecomment>Validate header menu (store locator , user button , minicart)</codecomment>
  <command name="assertElementPresent" target="css=#navigation .menu-utility-user li:first-of-type a"/>
  <command name="assertElementPresent" target="css=#navigation .menu-utility-user .user-info a"/>
  <command name="assertElementPresent" target="css=#mini-cart"/>
  <codecomment>Validate navigation</codecomment>
  <command name="assertElementPresent" target="css=#navigation ul.menu-category li:first-of-type"/>
  <command name="assertElementPresent" target="css=#navigation .header-search"/>
  <codecomment>Validate main content</codecomment>
  <command name="assertElementPresent" target="css=#main"/>
  <codecomment>Validate footer</codecomment>
  <command name="assertElementPresent" target="css=footer div.footer-container div:first-of-type"/>
  <command name="assertElementPresent" target="css=footer div.footer-container div:last-of-type"/>
  <command name="assertElementPresent" target="css=.content-asset div.copyright"/>
</scriptmodule>