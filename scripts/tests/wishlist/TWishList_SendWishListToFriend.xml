    <parameter name="email" value="${email_sender}"/>
    <parameter name="password" value="${password_sender}"/>
  </module>
  <action name="Search"/>
  <module name="modules.pages.search.MSearch_enterTextAndSubmit">
    <parameter name="searchText" value="${productNumber}"/>
